{
    "version": "0.2.0",
    "configurations": [
        {
        "type": "node",
        "request": "launch",
        // Name to whatever you like:
        "name": "note-taking",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "program": "${workspaceFolder}\\note-taking\\app.js",
        "cwd": "${workspaceFolder}\\note-taking",
        "sourceMaps": true,
        // You can leave this off if you wish to run in the Debug Console
        // instead:
        "console": "integratedTerminal",
        // These are the args you wish to pass to app.js.
        // Downside: Youâ€™ll have to change them every time to what you
        // wish to pass in:
        "args": [
            "add", "--title='x'", "--body='xxxxx'"
        ],
        // These are the arguments you wish to pass to node:
        "runtimeArgs": ["--inspect-brk"]
    }]
}